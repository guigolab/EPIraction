resume = true
trace.enabled = true

params {
    data_folder   = '/users/project/encode_005982/EPIraction.Nextflow'
    tissues_index = 'EPIraction.tissues.data'
    samples_index = 'EPIraction.H3K27ac.data'
    regions       = 'EPIraction.regions.bed'
}

executor {
    name = 'sge'
    queueSize = 200
    pollInterval = '5 sec'
    queueStatInterval = '10 sec'
}

process {
    beforeScript = "conda activate EPIraction"
    queue    = 'rg-el7'
    penv     = 'smp'

    withName: H3K27ac {
	cpus     = 2
	memory   = 15.GB
	time     = '5h'
    }

    withName: Consensus {
	cpus     = 2
	memory   = 15.GB
	time     = '5h'
    }

    withName: Quantiles_consensus {
	cpus     = 6
	memory   = 47.GB
	time     = '5h'
    }

    withName: Tissues_rescale {
	cpus     = 1
	memory   = 3.GB
	time     = '1h'
    }

    withName: Normalize_H3K27ac {
	cpus     = 3
	memory   = 30.GB
	time     = '1h'
    }

    withName: Merge_H3K27ac {
	cpus     = 2
	memory   = 15.GB
	time     = '1h'
    }

    withName: Annotate_regions {
	cpus     = 2
	memory   = 15.GB
	time     = '1h'
    }

    withName: Activity_regions {
	cpus     = 1
	memory   = 3.GB
	time     = '1h'
    }

    withName: Make_pairs {
	cpus     = 2
	memory   = 15.GB
	time     = '1h'
    }

    withName: HiC_dump {
	cpus     = 2
	memory   = 15.GB
	time     = '1h'
    }

    withName: First_qc {
	cpus     = 1
	memory   = 5.GB
	time     = '1h'
    }

    withName: Tissue_scalings {
	cpus     = 2
	memory   = 15.GB
	time     = '1h'
    }

    withName: Scalings_merge {
	cpus     = 2
	memory   = 15.GB
	time     = '1h'
    }

    withName: Expressed_genes {
	cpus     = 2
	memory   = 15.GB
	time     = '1h'
    }

    withName: Glmnet_data {
	cpus     = 2
	memory   = 16.GB
	time     = '24h'
    }

    withName: Glmnet_run {
	cpus     = 1
	memory   = 7.GB
	time     = '5h'
    }

    withName: Report_pairs {
	cpus     = 2
	memory   = 15.GB
	time     = '1h'
    }
}
